<div class="container">
	<div class="row">	
		<h4 class="current-category"><%= params[:category] %></h4>

		<% if @books.count == 0 %>
			<p class="h5">There are no books currently in this category</p>
		<% else %>
			<% @books.each do |book| %>

			 <div class="col-md-3">
				<a href="/books/<%= book.id %>">
					<%= image_tag book.book_img.url(:book_index), class: "book" %>
				</a>
			 </div>
			<% end %>
		<% end %>

	</div>
</div>